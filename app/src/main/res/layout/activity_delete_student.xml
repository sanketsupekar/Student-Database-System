<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deleteStudent"
    android:background="@drawable/homebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/lenearLayout1"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:gravity="center">
        <EditText
            android:id="@+id/txtFindRoll"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbutton"
            android:gravity="center"
            android:hint="  Roll No  "
            android:inputType="number"
            android:maxLength="3"
            android:numeric="integer"
            android:textColor="#000000"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/btnFind"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:background="@drawable/roundbutton"
            android:text="Find"
            android:textSize="20dp"
            android:textStyle="bold">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/lenearLayout2"
        android:orientation="horizontal"
        android:layout_below="@+id/lenearLayout1"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <TextView
            android:id="@+id/txtNameShow"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbutton"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/lenearLayout3"
        android:orientation="horizontal"
        android:layout_below="@+id/lenearLayout2"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundbutton"
            android:text="DELETE"
            android:textSize="20dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>
</RelativeLayout>
