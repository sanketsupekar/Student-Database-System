<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/homebackground">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="139dp"
            android:src="@drawable/studentid">

        </ImageView>

        <Button
            android:id="@+id/btnSearchStudent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbutton"
            android:text="Search Student Info"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnAddStudent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbutton"
            android:text=" Add Student Info"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnEditStudent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbutton"
            android:text=" Edit Student Info"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnDeleteStudent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbutton"
            android:text=" Delete Student Info"
            android:textStyle="bold">
        </Button>
    </LinearLayout>
    <TextView
        android:id="@+id/txtCreateBy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Developed By Sanket Supekar"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:textStyle="italic" />

</RelativeLayout>